<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TotiShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_application</item>
        <item name="colorPrimaryVariant">@color/green_application</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StartApplication" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_toti_shop</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.TotiShop</item>
    </style>

    <style name="TextViewBlackCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_black</item>
    </style>

    <style name="TextViewBoldCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_bold</item>
    </style>

    <style name="TextViewExtraBoldCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_extra_bold</item>
    </style>

    <style name="TextViewExtraLightCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_extra_light</item>
    </style>

    <style name="TextViewLightCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_light</item>
    </style>

    <style name="TextViewMediumCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_medium</item>
    </style>

    <style name="TextViewRegularCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_regular</item>
    </style>

    <style name="TextViewSemiBoldCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_semi_bold</item>
    </style>

    <style name="TextViewThinCustom" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/vazirmatn_thin</item>
    </style>
</resources>